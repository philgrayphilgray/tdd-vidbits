<div class="contents-container">

    <div class="video-card">
        <form method="get" action="/videos/{{video._id}}/edit">
            <button id="edit" class="input-button">Edit</button>
        </form>
        <form action="">
            <button id="delete" class="input-button">Delete</button>

        </form>
        <div class="video-title">
            <h1>{{video.title}}</h1>
        </div>
        {{#if video.url}}
        <iframe class="video-player" src="{{video.url}}" frameborder="0" allowfullscreen></iframe>
        {{/if}} {{!-- TODO: Move this check to route or model --}}
        <div class="video-description">
            <p>{{video.description}}</p>
        </div>
    </div>
</div>